#!/bin/env bash

choice=$(printf "Lock\nLogout\nSuspend\nReboot\nShutdown" | rofi -dmenu -p "Power menu")
case "$choice" in
  Lock) sh $HOME/bin/lock ;;
  Logout) pkill -KILL -u "$USER" ;;
  Suspend) systemctl suspend && sh $HOME/bin/lock ;;
  Reboot) systemctl reboot ;;
  Shutdown) systemctl poweroff ;;
esac
